# LytePHP Configuration
# Copy this file to .env and modify as needed

# Application Settings
APP_NAME=LytePHP
APP_VERSION=1.0.0
APP_DEBUG=true
APP_PORT=8000
APP_TIMEZONE=UTC

# Database Configuration
DB_DRIVER=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=lytephp
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4

# API Configuration
API_PREFIX=/api
API_CORS=true
API_RATE_LIMIT=1000

# Documentation Settings
DOCS_ENABLED=true
DOCS_PATH=/docs
DOCS_TITLE="LytePHP API Documentation"

# Docker Configuration (auto-detected)
DOCKER_CONTAINER=false 